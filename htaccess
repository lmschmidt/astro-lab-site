Options +FollowSymLinks
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteCond %{THE_REQUEST} !/etc_gmacs/ [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

RewriteCond %{HTTPS} off
RewriteCond %{THE_REQUEST} !/reflectance-plots/ [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

RewriteCond %{HTTPS} on
RewriteCond %{THE_REQUEST} /etc_gmacs/ [NC]
RewriteRule ^(.*)$ http://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

RewriteCond %{HTTPS} on
RewriteCond %{THE_REQUEST} /reflectance-plots/ [NC]
RewriteRule ^(.*)$ http://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

# redirect all files in publications folder to new folder
#RewriteCond %{REQUEST_URI} !^/publications/assets
#RewriteRule ^publications(.*)$ /publications/assets$1 [R=302,NC,L]

ErrorDocument 404 https://instrumentation.tamu.edu/404.html

Header append X-FRAME-OPTIONS "SAMEORIGIN"

<FilesMatch "\.htaccess|backup\.htaccess">
order allow,deny
deny from all
</FilesMatch>

